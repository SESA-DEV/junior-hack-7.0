generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Team {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  teamName      String   @unique
  membersCount  Int
  leader        Member
  members       Member[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("teams")
}

type Member {
  name      String
  studentNo String
  contactNo String
  email     String
}
